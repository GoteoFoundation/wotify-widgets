extends layout

block append styles
  link(rel="stylesheet", href="/assets/css/carousel.css")
  link(rel="stylesheet", href="/assets/css/step.css")

block header
  nav(class="nav-bg-"+space)
    div.container-fluid
      div.row
        div.col-sm-2
          div.step-circle.goto-fullscreen.with-group.hidden
            h1.title.text-center Space!{space}
            div.text-center
              img(src="/assets/img/steps/step-" + space + ".png")
          div.ideacamp-logo
            img(src='assets/img/ideacamp.svg'
              class='img-responsive')
        div.col-xs-4.col-sm-6.col-md-7
          div(class="imagine hidden-xs hidden-sm nav-title-bg-" + space)
            div#step-prop-title
            span#step-prop-subtitle
            span(class="glyphicon glyphicon-info-sign pull-right"
                 aria-hidden="true")
        div.col-xs-12.col-sm-4.col-md-3.moving-container
          img(src='/assets/img/moving.png'
              class='img-responsive moving hidden-xs')

        div.glyphicon.glyphicon-refresh.spinning

block content

  div#stepsSlider

  div.row.users
    //- ideamakers, users defined in model Group
    div#step-users.col-sm-12


block footer
  footer(class="with-group navbar-fixed-bottom hidden footer-bg-"+space)
    div.container-fluid
      div.row
        div.col-sm-2
          div.step-circle
            div.group.text-center
        div#group-users.col-sm-10


        //div#step-prop-title_footer(class="title-footer footer-element-bg-"+space)
        //div#step-prop-subtitle_footer(class="subtitle-footer footer-element-bg-"+space)



block prepend scripts
  script.
    SPACE=!{space};
    GROUP=!{space};

block append scripts
  script(src="/assets/js/spaces.js?v="+version)

